{
  "tasks": [
    {
      "label": "empty tmp",
      "command": "rm",
      "args": ["-r", "${workspaceFolder}/tmp"]
    },
    {
      "type": "cppbuild",
      "label": "C/C++: gcc build active file",
      "command": "/usr/bin/gcc",
      "args": [
        "-fdiagnostics-color=always",
        "-Wall",
        "-g",
        "${file}",
        "-o",
        "${workspaceFolder}/tmp/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger.",
      "dependsOn": ["empty tmp"],
    }
  ],
  "version": "2.0.0"
}
